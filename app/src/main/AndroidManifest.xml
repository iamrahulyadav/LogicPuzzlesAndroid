<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.zwstudio.lightupandroid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.zwstudio.logicgamesandroid.common.GameApplication">
        <service android:name="com.zwstudio.logicgamesandroid.common.MusicService"
                 android:enabled="true"/>
        <activity
            android:name="com.zwstudio.logicgamesandroid.lightup.android.LightUpMainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.zwstudio.logicgamesandroid.lightup.android.LightUpGameActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.zwstudio.logicgamesandroid.lightup.android.LightUpOptionsActivity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>